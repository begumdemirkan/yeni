@model List<Student>
@{
    ViewData["Title"] = "Students";
}

<h1>Student List</h1>
<p></p>
<p></p>

<div class="row">
    &nbsp;
    &nbsp;

    <div class="col-2">
        &nbsp;
        &nbsp;
        <a asp-controller="Students" asp-action="Add" class="btn btn-primary">Add Student</a>
    </div>

</div>
<div class="row">
    &nbsp;
    &nbsp;
</div>



@foreach (var item in @Model)
{
    <div class="item col-lg-2">
        <div class="thumbnail card">
            <div class="img-event">
                <img class="img-responsive" src="~/images/person-icon-5.png" alt="" />
            </div>
            @*<div class="card col-3">

                <div class="card-body">*@

            <dl class="row">
                <dt class="col-sm-3">

                    @item.Name  @item.Surname

                </dt>

            </dl>


            <h5 class="car-title">
                @Html.DisplayFor(modelItem => item.Department.Dname)
                @*class="card-text">@item.Department.Dname</h5>*@
            </h5>

            <a asp-controller="Students" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>

        </div>

    </div>


}






